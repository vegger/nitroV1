<div class="a-datepicker" data-g-name="Datepicker">
	<input type="text" class="a-datepicker__input js-a-datepicker__input"
		aria-label="{{label}}"
		{% if inputPlaceholder %}placeholder="{{inputPlaceholder}}"{% endif %}
		{% if dateFormat %}data-date-format="{{dateFormat}}"{% endif %}
		{% if altFormat %}data-alt-format="{{altFormat}}"{% endif %}
		{% if defaultDate %}data-default-date="{{defaultDate}}"{% endif %}
	>
</div>
